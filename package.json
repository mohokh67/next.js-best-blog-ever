  },
  "bugs": {
    "url": "https://github.com/mohokh67/next.js-best-blog-ever/issues"
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "bulma": "^0.8.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "firebase": "^7.7.0",
    "moment": "^2.24.0",
    "next": "^9.2.0",
    "node-sass": "^4.13.1",
    "nprogress": "^0.2.0",
    "re-base": "^4.0.0",
